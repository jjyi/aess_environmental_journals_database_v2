<!-- Validation failure messages -->

<% if @journal.errors.any? %>
  <% @journal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Journal #<%= @journal.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_journal/<%= @journal.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for journal_name -->
          <div class="form-group">
            <label for="journal_name" class="col-sm-2 control-label">
              Journal name
            </label>
            <div class="col-sm-10">
              <input type="text" id="journal_name" name="journal_name" placeholder="Journal name" class="form-control" value="<%= @journal.journal_name %>">
            </div>
          </div>

          <!-- Label and input for issues_per_yr -->
          <div class="form-group">
            <label for="issues_per_yr" class="col-sm-2 control-label">
              Issues per yr
            </label>
            <div class="col-sm-10">
              <input type="text" id="issues_per_yr" name="issues_per_yr" placeholder="Issues per yr" class="form-control" value="<%= @journal.issues_per_yr %>">
            </div>
          </div>

          <!-- Label and input for journal_url -->
          <div class="form-group">
            <label for="journal_url" class="col-sm-2 control-label">
              Journal url
            </label>
            <div class="col-sm-10">
              <input type="text" id="journal_url" name="journal_url" placeholder="Journal url" class="form-control" value="<%= @journal.journal_url %>">
            </div>
          </div>

          <!-- Label and input for content_guide_url -->
          <div class="form-group">
            <label for="content_guide_url" class="col-sm-2 control-label">
              Content guide url
            </label>
            <div class="col-sm-10">
              <input type="text" id="content_guide_url" name="content_guide_url" placeholder="Content guide url" class="form-control" value="<%= @journal.content_guide_url %>">
            </div>
          </div>

          <!-- Label and input for topic_id -->
          <div class="form-group">
            <label for="topic_id" class="col-sm-2 control-label">
              Topic
            </label>
            <div class="col-sm-10">
              <input type="text" id="topic_id" name="topic_id" placeholder="Topic" class="form-control" value="<%= @journal.topic_id %>">
            </div>
          </div>

          <!-- Label and input for admin_id -->
          <div class="form-group">
            <label for="admin_id" class="col-sm-2 control-label">
              Admin
            </label>
            <div class="col-sm-10">
              <input type="text" id="admin_id" name="admin_id" placeholder="Admin" class="form-control" value="<%= @journal.admin_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Journal
              </button>
              or
              <a href="/journals/<%= @journal.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
