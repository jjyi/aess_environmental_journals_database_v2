<!-- Validation failure messages -->

<% if @topic.errors.any? %>
  <% @topic.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Topic #<%= @topic.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_topic/<%= @topic.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for journal_topic -->
          <div class="form-group">
            <label for="journal_topic" class="col-sm-2 control-label">
              Journal topic
            </label>
            <div class="col-sm-10">
              <input type="text" id="journal_topic" name="journal_topic" placeholder="Journal topic" class="form-control" value="<%= @topic.journal_topic %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Topic
              </button>
              or
              <a href="/topics/<%= @topic.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
